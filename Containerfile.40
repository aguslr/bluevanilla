ARG FEDORA_MAJOR_VERSION=40

FROM quay.io/fedora/fedora-silverblue:${FEDORA_MAJOR_VERSION}
# See https://pagure.io/releng/issue/11047 for final location

COPY rootfs/ /

RUN rpm-ostree install gnome-tweaks && \
    sed -i 's/\.ext/.jxl/' /etc/dconf/db/local.d/01-background && \
    systemctl enable dconf-update.service && \
    rm -rf /usr/share/gnome-shell/extensions/background-logo@fedorahosted.org && \
    systemctl enable flatpak-add-flathub-repo.service && \
    systemctl enable flatpak-replace-fedora-apps.service && \
    systemctl enable flatpak-cleanup.timer && \
    sed -i 's/#AutomaticUpdatePolicy.*/AutomaticUpdatePolicy=check/' /etc/rpm-ostreed.conf && \
    systemctl enable rpm-ostreed-automatic.timer && \
    printf '[Manager]/nDefaultTimeoutStopSec=15s' > /etc/systemd/user.conf && \
    printf '[Manager]/nDefaultTimeoutStopSec=15s' > /etc/systemd/system.conf && \
    rpm-ostree cleanup -m && \
    ostree container commit
